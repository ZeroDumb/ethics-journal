---
import Layout from '../layouts/Layout.astro';

const title = "404 - Page Not Found";
---

<Layout title={title}>
  <div class="error-page">
    <div class="terminal">
      <div class="terminal-header">
        <span class="terminal-title">zerodumb@ethics-journal:~$</span>
        <div class="terminal-buttons">
          <span class="terminal-button close"></span>
          <span class="terminal-button minimize"></span>
          <span class="terminal-button maximize"></span>
        </div>
      </div>
      <div class="terminal-body">
        <div class="terminal-line">
          <span class="prompt">$</span> <span class="command">find / -name "page" 2>/dev/null</span>
        </div>
        <div class="terminal-output">
          find: '/page': No such file or directory
        </div>
        <div class="terminal-line">
          <span class="prompt">$</span> <span class="command">ls -la /var/www/html/</span>
        </div>
        <div class="terminal-output">
          total 0<br>
          drwxr-xr-x 2 root root 4096 Apr 25 12:00 .<br>
          drwxr-xr-x 3 root root 4096 Apr 25 12:00 ..<br>
          <span class="error-text">404 - Page Not Found</span>
        </div>
        <div class="terminal-line">
          <span class="prompt">$</span> <span class="command">cat /etc/error_codes | grep 404</span>
        </div>
        <div class="terminal-output">
          404: The requested resource could not be found on this server.
        </div>
        <div class="terminal-line">
          <span class="prompt">$</span> <span class="command">echo "Try navigating back to the homepage"</span>
        </div>
        <div class="terminal-output">
          Try navigating back to the homepage
        </div>
        <div class="terminal-line">
          <span class="prompt">$</span> <span class="command"><a href="/">cd /home</a></span>
        </div>
        <div class="terminal-line">
          <span class="prompt">$</span> <span class="cursor">_</span>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .error-page {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 70vh;
    padding: 2rem;
  }
  
  .terminal {
    width: 100%;
    max-width: 800px;
    background-color: #1a1a1a;
    border-radius: 6px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    overflow: hidden;
  }
  
  .terminal-header {
    background-color: #333;
    padding: 0.5rem 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .terminal-title {
    color: #ccc;
    font-family: monospace;
  }
  
  .terminal-buttons {
    display: flex;
    gap: 0.5rem;
  }
  
  .terminal-button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }
  
  .terminal-button.close {
    background-color: #ff5f56;
  }
  
  .terminal-button.minimize {
    background-color: #ffbd2e;
  }
  
  .terminal-button.maximize {
    background-color: #27c93f;
  }
  
  .terminal-body {
    padding: 1.5rem;
    font-family: 'Courier New', monospace;
    line-height: 1.5;
  }
  
  .terminal-line {
    margin-bottom: 0.5rem;
  }
  
  .prompt {
    color: #27c93f;
    margin-right: 0.5rem;
  }
  
  .command {
    color: #e0e0e0;
  }
  
  .terminal-output {
    color: #ccc;
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }
  
  .error-text {
    color: #ff5f56;
    font-weight: bold;
  }
  
  .cursor {
    animation: blink 1s infinite;
  }
  
  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
</style> 